<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Restaurant Information"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="127dp"
        android:text="Phone:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="64dp"
        android:text="Name:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/url"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/phone"
        android:layout_marginTop="195dp"
        android:text="Website:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/phone"
        android:layout_marginBottom="210dp"
        android:text="Rating:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/phone"
        android:layout_marginBottom="280dp"
        android:text="Slogan:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cat"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/phone"
        android:layout_marginTop="268dp"
        android:text="Category:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/resSlogan"
        android:layout_width="288dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/resPhone"
        android:layout_alignTop="@+id/slogan"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/resCat"
        android:layout_width="288dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/resPhone"
        android:layout_alignTop="@+id/cat"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/resURL"
        android:layout_width="288dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/resSlogan"
        android:layout_alignTop="@+id/url"
        android:textSize="18sp"
        android:autoLink="web"/>

    <TextView
        android:id="@+id/resPhone"
        android:layout_width="288dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/phone"
        android:layout_marginEnd="16dp"
        android:textSize="18sp"
        android:autoLink="phone"/>

    <TextView
        android:id="@+id/resName"
        android:layout_width="284dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/resSlogan"
        android:layout_alignTop="@+id/name"
        android:layout_marginStart="-4dp"
        android:textSize="18sp" />

    <RatingBar
        android:id="@+id/resRating"
        android:layout_width="244dp"
        android:layout_height="46dp"
        android:layout_alignStart="@+id/resSlogan"
        android:layout_alignTop="@+id/rating"
        android:clickable="false"
        android:isIndicator="true"/>

    <Button
        android:id="@+id/return_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="116dp"
        android:text="Return to list" />

</RelativeLayout>